{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "build",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"]
    },
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__", "src/**/*.spec.ts", "src/**/*.js"],
  "jsdoc": {
    "out": "support/jsdoc",
    "access": "public"
  }
}
